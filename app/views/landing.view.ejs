<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Oui</title>
  <link rel="stylesheet" href="/styles/styles.css" />
  <script type="module" src="../js/app.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
    integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
    crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
</head>

<body>
  <!-- Autres contenus -->
  <main>


    <div class="container d-flex">

      <div class="row d-flex">
        <div class="d-flex flex-row justify-content-center mt-2 mb-1">

          <!-- Launch App   -->
           <div class="d-flex justify-content-center flex-column ">

             <button type="button" class="btn btn-md btn-dark  " onclick="window.location.href='/app'"
             data-bs-toggle="tooltip" data-bs-placement="right" data-bs-custom-class="custom-tooltip"
             data-bs-title="onClick = window.location.href='/app">
             Lancer l'application
            </button>
            
            <button type="button" class="btn btn-sm btn-outline-danger" onClick="window.location.href='/'"  data-bs-toggle="tooltip" data-bs-placement="right" data-bs-custom-class="custom-tooltip"
            data-bs-title="onClick = window.location.href='/'">
              Retourner au début
            </button>
            
          </div>

            <button type="button" id="request-component-btn" class="btn btn-md btn-dark mx-auto mt-2"
            onclick="requestComponent('/hello-discret', 'request-outlet')">
            Récupérer Composant 'Bonjour'
          </button>
          <p class="text-center">(Discretement)</p>
          
          <button type="button" id="dismiss-component-btn" class="btn btn-md btn-dark mx-auto mt-2">
            Suprimer le composant
          </button>

          <button id="dynamic-button" type="button" class="btn btn-md btn-dark mx-auto mt-2"
            onclick="dismissComponentById('response')">
            Détruire le composant depuis
          </button>

          <button type="button" class="btn btn-md btn-dark mx-auto mt-2" onclick="window.location.href='/hello'">
            Dire bonjour
          </button>
          
          <button type="button" class="btn btn-md btn-dark mx-auto mt-2" onclick="window.location.href='/message'">
            Envoyer un msg dans le log du serveur
          </button>
          
          <button type="button" class="btn btn-md btn-dark mx-auto mt-2" onclick="window.location.href='/shutdown'">
            Dire bonjour
          </button>

          <button class="btn" onclick="window.location.href='/calcul'">
            Calculette
          </button>
          
          <button id="btn-test" class="btn">Bouton 3</button>
        
        </div>
        
        <div class="">

          <!-- Outlets -->
          <div id="response"></div>
          <div id="request-outlet" class="request-outlet"></div> <!-- Pour afficher la réponse reçu depuis le serveur par le client -->


          <!-- Server Side -->
          <%- include(content) %>  <!-- Pour afficher la réponse montée par le serveur dans la page et envoyé au client -->
           
        </div>
      </div>

    

      <%- include(talkbox) %> <%- include(content) %>

  </main>
</body>

</html>